<%# this renders the navbar %>

	<section class="hero">
		<%= render "shared/navbar" %>
	</section>

	<section id="products">
		<div class="container is-fluid">
			<div class="columns is-variable is-0">
				<div id="sidebar-filter" class="column is-one-fifth">
					<div class="filter-container">
						<h1>Filter Options</h1>
					</div>
				</div>
				<div id="products-listing" class="column is-four-fifths">

					<div class="container">

						<div class="columns is-variable is-2 is-desktop is-mobile">
							<!-- is-1 defines the gap of the rows -->

							<% @furnitures.each do |furniture| %>

								<div class="column is-one-third-desktop is-one-third-tablet is-half-mobile">

									<div class="card">
										<a href="<%="./furniture/" + furniture.id.to_s%>">
											<div class="card-image">
												<figure class="image is-4by3">
													<img src=<%= furniture.img_url %> alt="Placeholder image">
												</figure>
											</div>
											<div class="card-content">
												<div class="content">
													<h3><%= furniture.name %></h3>
													<p class="price">$<%= '%.2f' % furniture.price %></p>
												</div>
											</div>
										</a>
									</div>
								</div>

							<% end %>

						</div>

					</div>

				</div>
			</div>
		</div>
	</section>
	<script src="js/script.js"></script>
