<%= render "shared/navbar", :locales => {:carts => @carts} %>

<section id="wishlist">
	<div class="container is-fluid">
    <div class="columns">
      <div class="column">
        <nav class="breadcrumb" aria-label="breadcrumbs">
          <ul>
            <li><%= link_to 'Home', root_path %></li>
            <li class="is-active" aria-current="page"><a href="/wishlists">Wishlist</li>
          </ul>
        </nav>
      </div>
    </div>

    <div class="columns">
      <div class="column title">
        <h1>Wishlist</h1>
        <button class="button is-primary is-large">View in Floorplanner</button>
      </div>
    </div>

		<div class="columns">
			<div class="column">
				<div class="card">

					<table class="table is-fullwidth">
						<tr>
							<th>Product</th>

							<th>Name</th>
							<th>Category</th>
							<th class="numbers">Total Price</th>
							<th></th>
						</tr>
						<% @wishlists.each do |wishlist| %>

							<tr>
                <a href="#">
  								<td><img src="<%= wishlist.furniture_option.image %>" width="300px"/></td>
  								<td><%= wishlist.furniture_option.furniture.name %></td>
  								<td><%= wishlist.furniture_option.furniture.category %></td>
  								<td class="numbers"><%= '%.2f' % wishlist.furniture_option.price %></td>
  								<td>
                    <a class="button is-success" href="<%="./furnitures/" + wishlist.furniture_option.furniture.id.to_s%>">View</a>
  									<a class="button is-danger wishlist-delete">Delete<input value="<%=wishlist.id%>" hidden="hidden"/></a>
  								</td>
                </a>
							</tr>
						<% end %>

					</table>

				</div>
			</div>
		</div>
	</div>
</section>
