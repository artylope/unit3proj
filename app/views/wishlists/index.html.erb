<h1>Wishlist</h1>

<%= form_with scope: :order, url: orders_path, local: true do |form| %>
    <table>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Price</th>
        <th>Category</th>
        <th>Image</th>
        <th>Total Price</th>
        <th></th>
      </tr>
      <% @wishlists.each do |wishlist| %>

        <tr>
            <td><%=form.check_box :selected_wishlist_id, { multiple: true }, wishlist.id ,nil%></td>
            <td><%= wishlist.furniture_option.furniture.name %></td>
            <td><%= '%.2f' % wishlist.furniture_option.price %></td>
            <td><%= wishlist.furniture_option.furniture.category %></td>
            <td><img src="<%= wishlist.furniture_option.image %>" width="300px"/></td>
            <td><%= '%.2f' % wishlist.furniture_option.price %></td>
            <td><%= link_to 'Delete', wishlist_path(wishlist),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>


    </table>
    <%= link_to 'Back to main', root_path %>
<% end %>
